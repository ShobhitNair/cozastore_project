                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">Orders List</h4>
                                <!-- <h6 class="card-subtitle">Add <code>.table-hover</code> to enable a hover state on table
                                    rows within a <code>&lt;tbody&gt;</code>.</h6> -->
                                    <a href="/admin/adminOrder?id=all" class="btn btn-danger text-white">All Orders</a>
                                    <a href="/admin/adminOrder?id=comfirmed" class="btn btn-danger text-white">Comfirmed Orders</a>
                                    <a href="/admin/adminOrder?id=delivered" class="btn btn-danger text-white">Delivered Orders</a>
                    
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-striped">
                                    <thead>
                                        <th>SI NO</th>
                                    	<th>User Id</th>
                                    	<th>Order Id</th>
                                    	<th>Date</th>
                                    	<th>Status</th>
                                        <th>Bill Amount</th>
                                        <th>Action</th>
                                    </thead>
                                    <tbody>
                                        <% if(order.length>0){ %>
                                            <% for(let i=1;i <order.length; i++){ %>  
                                        <tr>
                                        	<th><%= i %> </th>
                                            <td>
                                                <%= order[i-1]._id %>
                                            </td> 
                                            <td>
                                                <%= order[i-1].userId %>
                                            </td>
                                            <td>
                                                <%= order[i-1].createdAt.toDateString() %>
                                            </td>
                                            <td>
                                                <%= order[i-1].payment %>
                                            </td>   
                                            <td>
                                                <%= order[i-1].products.totalPrice %>
                                            </td>
                                            <td>
                                                <%= order[i-1].status %>
                                            </td>     
                                            
                                        </tr>
                                        <% } } else{ %>
                                            <tr>
                                                <td colspan="5">Orders Not Found</td>
                                            </tr>
                                            <% } %>
                                        
                                    </tbody>
                                </table>

